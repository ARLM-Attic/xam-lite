<Window x:Class="WpfReferenceDemo.RadioButtonExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RadioBoxExample" Height="372" Width="703">
    <Grid>
        <RadioButton Content="Day" Height="16" HorizontalAlignment="Left" Margin="74,71,0,0" Name="radioButton1" VerticalAlignment="Top" GroupName="TimeOfDay" IsChecked="True" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="74,42,0,0" Name="textBlock1" Text="Time of Day" VerticalAlignment="Top" FontWeight="Bold" />
        <RadioButton Content="Night" Height="16" HorizontalAlignment="Left" Margin="74,93,0,0" Name="radioButton2" VerticalAlignment="Top" GroupName="TimeOfDay" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="74,135,0,0" Name="textBlock2" Text="Material Type" VerticalAlignment="Top" FontWeight="Bold" />
        <RadioButton Content="Ore" Height="16" HorizontalAlignment="Left" Margin="74,164,0,0" Name="radioButton3" VerticalAlignment="Top" GroupName="MaterialType" IsChecked="True" />
        <RadioButton Content="Coal" Height="16" HorizontalAlignment="Left" Margin="74,186,0,0" Name="radioButton4" VerticalAlignment="Top" GroupName="MaterialType" />
        <RadioButton Content="Pudding" Height="16" HorizontalAlignment="Left" Margin="74,208,0,0" Name="radioButton5" VerticalAlignment="Top" GroupName="MaterialType" />
    </Grid>
</Window>
